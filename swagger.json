{
  "openapi": "3.0.0",
  "info": {
    "title": "Universities Api",
    "contact": {
      "email": "fernando39357@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development API"
    }
  ],
  "paths": {
    "/universities":{
      "post": {
        "summary": "Create a new post",
        "tags": ["Posts"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/PostInput"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Invalid body content"
          },
          "500": {
            "description": "server error"
          },
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List all universities",
        "tags": ["Universities"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false
          },
          {
            "name": "country",
            "in": "query",
            "description": "Search by country name",
            "required": false
          }
        ],
        "responses": {
          "422": {
            "description": "Invalid request content"
          },
          "500": {
            "description": "server error"
          },
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "query": {
                      "type": "object",
                      "properties": {
                        "page": {
                          "type": "integer"
                        },
                        "totalOfPages": {
                          "type": "integer"
                        },
                        "totalOfItems": {
                          "type": "integer"
                        }
                      }
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/University"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}":{
      "put": {
        "summary": "Update post",
        "tags": ["Posts"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "params",
            "description": "Post Id",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePostInput"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Invalid body content"
          },
          "500": {
            "description": "server error"
          },
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List post details",
        "tags": ["Posts"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "params",
            "description": "Post Id",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "server error"
          },
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/PostResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove post",
        "tags": ["Posts"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "params",
            "description": "Post Id",
            "required": true
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "server error"
          },
          "204": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "University": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "state-province": {
            "type": "string",
            "nullable": true
          },
          "domains": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "country": {
            "type": "string"
          },
          "web_pages": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "name": {
            "type": "string"
          },
          "alpha_two_code": {
            "type": "string"
          }
        },
        "required": ["name", "email", "password", "image"]
      }
    }
  }
}